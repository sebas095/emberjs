<div class="lists-container">
  <div class="infinite-width lists">
    {{#each model as |list| }}
      {{#trello-list list=list}} {{/trello-list}}
    {{/each}}
    <div class="new-list">
      <form {{ action "create" on="submit" }}>
        {{input type="text" class="form-control" value=listTitle placeholder="Nombre lista..."}}
        {{input type="submit" class="btn btn-success" value="Crear Lista"}}
      </form>
    </div>
  </div>
</div>
